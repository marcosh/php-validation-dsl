{
    "name": "marcosh/php-validation-dsl",
    "description": "A DSL for validating data in a functional fashion",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Perone",
            "email": "pasafama@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "webmozart/assert": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Marcosh\\PhpValidationDSL\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/Result/functions.php"
        ]
    },
    "require-dev": {
        "ext-json": "*",
        "kahlan/kahlan": "^5.1",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.10|dev-master"
    }
}
